pipeline {
  agent none
  
  parameters {
  string defaultValue: 'main', name: 'supergirl', trim: true
}
  environment {
  harsh = "supergirl"
              }

    stages {
    stage ( 'BUILD' ) {
            agent { label 'masterkeynode' }
                steps {
                 sh '''
                                
                    echo " harsh is $harsh"
                    '''
                    }
                 }
               stage ( 'TEST' ) {
                  agent { label 'node1-cproject' }
                steps {
                 sh '''
                    echo "$$"
                    '''
                    }
                 }
                  stage ( 'pipeline-test' ) {
                     agent { label 'masterkeynode' }
                steps {
                 sh '''
                    echo "$!"
                    '''
                    }
                 }
             
             stage ( 'pipeline-deploy' ) {
                agent { label 'node1-cproject' }
                steps {
                 sh '''
                    pwd
                    '''
                    }
                 }
                  stage ( 'pipeline-build' ) {
                     agent { label 'node1-cproject' }
                steps {
                 sh '''
                    echo "$?"
                    '''
                    }
                 }
            }
         }

